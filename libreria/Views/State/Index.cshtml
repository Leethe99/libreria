@model IEnumerable<libreria.Models.dbModels.State>

@{
    ViewData["Title"] = "Index";
}

<h1>Estado</h1>

<table class="table">
    <thead>
        <tr>
            <th>
               Estados
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.State1)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary">Editar</a> |
              
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-secondary">Borrar</a>
            </td>
        </tr>
}
    </tbody>
</table>

<p>
	<a asp-action="Create" class="btn btn-secondary">Crear</a>
</p>