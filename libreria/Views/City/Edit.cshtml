@model libreria.Models.dbModels.City

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar Ciudad</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger">Nombre:</div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="City1" class="control-label">Nombre de la Ciudad:</label>
                <input asp-for="City1" class="form-control" />
                <span asp-validation-for="City1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
				<a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
