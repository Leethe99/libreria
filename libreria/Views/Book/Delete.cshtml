@model libreria.Models.dbModels.Book

@{
    ViewData["Title"] = "Delete";
}

<h1>Borrar libro</h1>

<h3>¿Seguro que desea borrar este elemento?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Titulo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
         Año de Publicacion
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PubYear)
        </dd>
        <dt class = "col-sm-2">
            Autor
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Author.Id)
        </dd>
    </dl>
    
    <form asp-action="Borrar">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Borrar" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
    </form>
</div>
