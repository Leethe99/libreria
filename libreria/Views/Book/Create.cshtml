@model libreria.Models.dbModels.Book

@{
    ViewData["Title"] = "Create";
}

<h1>Crear Libro</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label">Titulo:</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AuthorId" class="control-label">Autor:</label>
                <select asp-for="AuthorId" class ="form-control" asp-items="ViewBag.AuthorId"></select>

            </div>
            <div class="form-group">
                <label asp-for="PubYear" class="control-label"> Año de Publicacion:</label>
                <input asp-for="PubYear" class="form-control" />
                <span asp-validation-for="PubYear" class="text-danger"></span>
            </div>
            
            <div class="form-group">
				<input type="submit" value="Crear" class="btn btn-primary" />  
                <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
